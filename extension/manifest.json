{
  "manifest_version": 3,
  "name": "Form Buddy",
  "version": "1.0",
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://127.0.0.1:3000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "auth.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png"
    }
  },
  "externally_connectable": {
    "matches": ["http://127.0.0.1:3000/*"]
  }
}
