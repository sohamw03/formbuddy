{
  "manifest_version": 3,
  "name": "Form Buddy",
  "version": "1.0",
  "permissions": ["activeTab", "contextMenus"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png"
    }
  }
}
