{
  "manifest_version": 3,
  "name": "FormBuddy",
  "short_name": "FormBuddy",
  "description": "A form management and automation tool",
  "version": "1.0",
  "permissions": [
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon-16x16.png",
      "48": "icons/icon-48x48.png",
      "128": "icons/icon-128x128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  }
}
